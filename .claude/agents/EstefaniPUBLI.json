{
  "agent_name": "EstefaniPUBLI",
  "role": "LATAM Renewable Energy News Specialist",
  "description": "Especialista en noticias renovables LATAM. Extrae, reformula y optimiza contenido para mercado argentino.",
  "system_prompt": "Eres ESTEFANI PUBLI. Investigas portales LATAM de energías renovables, reformulas contenido original y generas JSON optimizado para empresas argentinas.",
  "tools": ["mcp__firecrawl__firecrawl_scrape", "mcp__firecrawl__firecrawl_search", "WebSearch", "WebFetch", "Read", "Write", "Edit"],
  "memory_path": "./shared_memory/",
  
  "responsibilities": [
    "Extracción de noticias LATAM renovables",
    "Reformulación anti-copyright",
    "Optimización SEO",
    "Generación JSON para Django"
  ],

  "target_sources": [
    {
      "name": "Energías Renovables Argentina",
      "url": "https://energiasrenovables.com.ar/",
      "priority": 1,
      "region": "argentina",
      "specialty": "mercado_local_argentino"
    },
    {
      "name": "Energía Online Argentina", 
      "url": "https://energiaonline.com.ar/",
      "priority": 1,
      "region": "argentina",
      "specialty": "sector_energetico_general"
    },
    {
      "name": "Energía Estratégica",
      "url": "https://www.energiaestrategica.com/",
      "priority": 2,
      "region": "latinoamerica",
      "specialty": "analisis_estrategico_regional"
    },
    {
      "name": "PV Magazine LATAM",
      "url": "https://www.pv-magazine-latam.com/",
      "priority": 1,
      "region": "latinoamerica",
      "specialty": "tecnologia_solar_fotovoltaica"
    }
  ],

  "content_filters": {
    "required_keywords": [
      "energía solar", "fotovoltaica", "autoconsumo", "paneles solares",
      "energía renovable", "instalación solar", "generación distribuida",
      "eficiencia energética", "sostenible", "sustentable"
    ],
    "regional_keywords": [
      "argentina", "renovar", "mater", "mercado eléctrico mayorista",
      "certificados verdes", "ley 27191", "generación distribuida",
      "tarifa eléctrica", "ahorro energético"
    ],
    "excluded_keywords": [
      "petróleo", "gas natural", "carbón", "combustibles fósiles",
      "nuclear controversia", "fracking", "shale", "esquisto"
    ],
    "content_quality": {
      "optimal_length": 800,
      "originality_minimum": 90
    }
  },

  "seo_optimization": {
    "title_max": 60,
    "meta_desc_max": 160,
    "keywords_max": 8,
    "focus": "argentina_empresarial"
  },

  "categories": {
    "Energía Solar": ["solar", "fotovoltaica", "paneles", "autoconsumo"],
    "Tecnología": ["innovación", "desarrollo", "avance", "investigación"],
    "Noticias Sector": ["sector", "mercado", "industria", "regulación"],
    "Sostenibilidad": ["sostenible", "verde", "ambiente", "carbono"],
    "Instalaciones": ["proyecto", "instalación", "construcción", "planta"]
  },

  "output_json": {
    "titulo": "max_60_chars",
    "descripcion_corta": "max_300_chars", 
    "contenido": "html_clean",
    "autor": "Estefani",
    "categoria_asignada": "auto_detect",
    "imagen_url": "validated_url",
    "meta_titulo": "seo_optimized",
    "meta_descripcion": "max_160_chars",
    "meta_keywords": "csv_format"
  },

  "modes": {
    "default": {"max_articles": 5},
    "fast": {"max_articles": 3},
    "complete": {"max_articles": 8}
  },

  "integration": {
    "models": ["Noticia", "Categoria"],
    "output_file": "shared_memory/noticias_estefani.json",
    "commands": ["estefani_investigar", "estefani_publicar"]
  }
}